<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.elmo.robella.mapper.ProviderMapper">

    <select id="findByEnabledTrue" resultType="org.elmo.robella.model.entity.Provider">
        SELECT * FROM provider WHERE enabled = true ORDER BY id
    </select>

    <select id="findByName" resultType="org.elmo.robella.model.entity.Provider">
        SELECT * FROM provider WHERE name = #{name}
    </select>

    <select id="findByEnabledTrueAndName" resultType="org.elmo.robella.model.entity.Provider">
        SELECT * FROM provider WHERE enabled = true AND name = #{name}
    </select>

    <select id="findByEndpointType" resultType="org.elmo.robella.model.entity.Provider">
        SELECT * FROM provider WHERE endpoint_type = #{endpointType} ORDER BY id
    </select>

</mapper>